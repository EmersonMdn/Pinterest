<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/styles.css">

    <%- include("partials/head") %>

    <title>Home</title>
</head>

<body>

    <%- include('partials/navbar') %>

    <div class="container p-4">
        <div class="row">
            <div class="card-columns">
                <% images.forEach(function(image){ %>
                <div class="card animate__animated animate__fadeInDown">
                    <a href="/image/<%= image._id %>"><img src="<%= image.path  %>" class="card-img-top card-img"></a>
                    <div class="card-body">
                        <h5 class="card-title"><%= image.title %></h5>
                        <p class="card-text"><%= image.description %></p>
                        <small class="card-text"><i class="fa-solid fa-arrow-up-from-bracket"></i>
                            <%= format(image.created_at) %></small>
                        <% if (image.last_modified != null) { %>
                        <small class="card-text d-block"><i class="fa-solid fa-pen"></i>
                            <%= format(image.last_modified) %></small>
                        <% } %>
                        <!-- <small class="card-text"><%= format(image.last_modified) %></small> -->
                        <!-- <a href="/image/<%= image._id %>" class="btn btn-primary">View profile</a> -->
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>

</html>